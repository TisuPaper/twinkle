{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "LearnWordGameWords",
    "description": "Schema for AI-generated word lists for the multisensory learn word game, categorized by difficulty.",
    "type": "object",
    "properties": {
        "ageLevel": {
            "type": "string",
            "description": "The target age level for the words (e.g., '4-5', '6-7')."
        },
        "difficulty": {
            "type": "object",
            "description": "Words categorized by difficulty level.",
            "properties": {
                "easy": {
                    "type": "array",
                    "description": "List of easy words suitable for the age level.",
                    "items": {
                        "type": "string"
                    }
                },
                "medium": {
                    "type": "array",
                    "description": "List of medium difficulty words suitable for the age level.",
                    "items": {
                        "type": "string"
                    }
                },
                "hard": {
                    "type": "array",
                    "description": "List of hard words suitable for the age level.",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "easy",
                "medium",
                "hard"
            ]
        }
    },
    "required": [
        "ageLevel",
        "difficulty"
    ]
}